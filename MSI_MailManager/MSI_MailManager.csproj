<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.0;net45</TargetFrameworks>
    <PackOnBuild>true</PackOnBuild>
    <PackageVersion>0.7</PackageVersion>
    <Authors>Microsource </Authors>
    <Description>Mail manager that handles sending of e-mails from your application to multiple SMTP clients.</Description>
    <PackageId>MSI_MailManager</PackageId>
    <Copyright>Microsource</Copyright>
    <Owners>Microsource</Owners>
    <PackageReleaseNotes>The package now supports .Net Core 3.0 and .Net Framework 4.5</PackageReleaseNotes>
    <Summary>MSI_MailManager</Summary>
    <PackageTags>MSI_MailManager</PackageTags>
    <Title>MSI_MailManager</Title>
    <PackageProjectUrl>https://github.com/MicroSourcePH/MailManager</PackageProjectUrl>
    <DevelopmentDependency>true</DevelopmentDependency>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NuGet.Build.Packaging" Version="0.2.5-dev.8">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Models\" />
  </ItemGroup>
</Project>
